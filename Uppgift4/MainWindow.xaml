<Window x:Class="Uppgift4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="50,10,0,0">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblCode1" Content="0" FontSize="18"/>
                <Label x:Name="lblCode2" Content="0" Margin="16,0,0,0" FontSize="18"/>
                <Label x:Name="lblCode3" Content="0" Margin="16,0,0,0" FontSize="18"/>
                <Label Content="-- Regnummer " />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox x:Name="chk1" Margin="0,0,2,0">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
                <CheckBox x:Name="chk2" Margin="0,0,2,0">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
                <CheckBox x:Name="chk3" Margin="0,0,2,0">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
                <Label Content=" -- Stanna " Padding="0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblTotal1" HorizontalAlignment="Right" Content="0" Margin="2,0,6,0" FontSize="15"/>
                <Label x:Name="lblTotal2" HorizontalAlignment="Right" Content="0" Margin="6,0,6,0" FontSize="15"/>
                <Label x:Name="lblTotal3" HorizontalAlignment="Right" Content="0" Margin="6,0,0,0" FontSize="15"/>
                <Label Content="-- Poäng " />
            </StackPanel>
            <Button Click="btnBet_Click" x:Name="btnBet" Content="Satsa"/>
            <Button Click="btnClear_Click" x:Name="btnClear" Content="Rensa"/>
        </StackPanel>
    </Grid>
</Window>
